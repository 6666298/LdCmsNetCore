@using LdCms.EF.DbModels
@using LdCms.Common.Extension
@using LdCms.Common.Utility
@using LdCms.Common.Enum
@model Ld_Extend_SearchKeyword
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article class="page-container">
    <div>
        <div style="height:32px;line-height:32px;">基本信息：</div>
        <table class="table table-border table-bordered table-hover table-bg table-sort">
            <tbody>
                <tr>
                    <td class="text-r" style="background-color:#f5fafe;" width="200">关建字：</td>
                    <td class="text-l" width="" colspan="3">@Model.Keyword</td>
                </tr>
                <tr>
                    <td class="text-r" style="background-color:#f5fafe;" width="200">会员ID：</td>
                    <td class="text-l" width="35%">@Model.MemberID</td>
                    <td class="text-r" style="background-color:#f5fafe;" width="200">客户端：</td>
                    <td class="text-l" width="">@Model.ClientName</td>
                </tr>
                <tr>
                    <td class="text-r" style="background-color:#f5fafe;" width="200">总次数：</td>
                    <td class="text-l" width="">@Model.Hits.ToInt()</td>
                    <td class="text-r" style="background-color:#f5fafe;" width="200">是否置顶：</td>
                    <td class="text-l" width="">@(Model.IsTop.ToBool()?"是":"否")</td>
                </tr>
                <tr>
                    <td class="text-r" style="background-color:#f5fafe;" width="200">IP地址：</td>
                    <td class="text-l" width="">@Model.IpAddress</td>
                    <td class="text-r" style="background-color:#f5fafe;" width="200">时间：</td>
                    <td class="text-l" width="">@Model.CreateDate.ToDate().ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
        <div style="height:32px;line-height:32px;">新数据：</div>
        <table class="table table-border table-bordered table-hover table-bg table-sort">
            <thead>
                <tr class="text-c">
                    <th width="80">客户端</th>
                    <th width="100">会员ID</th>
                    <th width="">关键字</th>
                    <th width="110">IP地址</th>
                    <th width="80">置顶</th>
                    <th width="120">加入时间</th>
                </tr>
            </thead>
            <tbody id="lists">
                @foreach (var m in ViewData["list"] as List<Ld_Extend_SearchKeyword>)
                {
                    <tr class="text-c">
                        <td>@m.ClientName</td>
                        <td>@m.MemberID</td>
                        <td class="text-l">@m.Keyword</td>
                        <td>@m.IpAddress</td>
                        <td class="td-status">@(m.IsTop.ToBool() ? Html.Raw("<span class='label label-success radius'>是</span>") : Html.Raw("<span class='label label-defaunt radius'>否</span>"))</td>
                        <td>@(m.CreateDate.ToDate().ToString("yyyy-MM-dd HH:mm"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="pt-30" style="width:100%; height:60px;"></div>
</article>

